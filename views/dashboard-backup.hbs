            const cell = rows[i].getElementsByTagName('td')[0];
            const number = parseFloat(cell.textContent);

            if (number > 0) {
                cell.classList.add('positive');
            } else if (number < 0) {
                cell.classList.add('negative');
            }
        }
    }

    // Call the function to apply the colors
    colorNumbers();
</script>
